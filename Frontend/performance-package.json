{
  "name": "performance-test",
  "version": "1.0.0",
  "description": "Script de test de performance pour ShopNow",
  "scripts": {
    "perf-test": "npm run dev -- --mode performance",
    "dev-optimized": "VITE_MODE=performance npm run dev",
    "analyze-bundle": "npm run build && npx vite-bundle-analyzer dist",
    "lighthouse": "lighthouse http://localhost:5173/checkout --output json --output html --output-path ./performance-reports/",
    "perf-report": "node scripts/performance-analysis.js"
  },
  "devDependencies": {
    "vite-bundle-analyzer": "^0.7.0",
    "lighthouse": "^10.0.0"
  }
}
